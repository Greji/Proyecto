<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:background="@color/colorPrimary">
        <ImageButton
            android:id="@+id/btn_mpreregresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:layout_marginStart="0dp"
            android:backgroundTint="@color/colorPrimary"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Modo Predeterminado"/>

    </Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="10dp"
        android:text="Minutos        Segundos"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center">

        <EditText
            android:id="@+id/mpre_minutos"
            android:inputType="number"
            android:maxLength="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:layout_marginStart="135dp"
            android:textSize="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:text=":"/>

        <EditText
            android:id="@+id/mpre_segundos"
            android:inputType="number"
            android:maxLength="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="40dp" />



    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/mpre_visual"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="110dp"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/colorPrimary"
            android:text="VISUAL"
            />

        <Button
            android:id="@+id/mpre_audio"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="200dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimary"
            android:text="AUDIO"/>

    </FrameLayout>

    <Button
        android:id="@+id/btn_baja"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:text="Intensidad Baja"
        android:textColor="#FFFFFF"
        android:backgroundTint="#08AE9E"
        />

    <Button
        android:id="@+id/btn_media"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:text="Intensidad Media"
        android:textColor="#FFFFFF"
        android:backgroundTint="#08AE9E"
        />


    <Button
        android:id="@+id/btn_alta"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:text="Intensidad Alta"
        android:textColor="#FFFFFF"
        android:backgroundTint="#08AE9E"
        />

    <Button
        android:id="@+id/btn_muyalta"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:text="Intensidad muy alta"
        android:textColor="#FFFFFF"
        android:backgroundTint="#08AE9E"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="15dp">

        <ImageButton
            android:id="@+id/mpre_play"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:backgroundTint="#08AE9E"
            android:src="@drawable/ic_play_arrow"
            />

        <ImageButton
            android:id="@+id/mpre_pause"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="150dp"
            android:backgroundTint="#08AE9E"
            android:src="@drawable/ic_pause"/>

        <ImageButton
            android:id="@+id/mpre_stop"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="250dp"
            android:backgroundTint="#08AE9E"
            android:src="@drawable/ic_stop"/>




    </FrameLayout>



</LinearLayout>